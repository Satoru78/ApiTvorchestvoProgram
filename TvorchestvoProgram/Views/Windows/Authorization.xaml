<Window x:Class="TvorchestvoProgram.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TvorchestvoProgram"
        mc:Ignorable="d"
        Icon="/Resource/icon.ico"
        Title="Авторизация" Height="400" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="30"></TextBlock>
            <TextBlock Text="Логин:"></TextBlock>
            <TextBox Width="205" Name="txbLogin"></TextBox>
            <TextBlock Text="Пароль:"></TextBlock>
            <TextBox Name="txbPassword" Width="205"></TextBox>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <Button Content="Войти" Name="LoginBtn" Click="LoginBtn_Click" Width="100" Margin="0,0,5,0"></Button>
                <Button Content="Отмена" Name="CancelBth" Click="CancelBth_Click" Width="100"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
